<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fragmentBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/map_address_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Москва, Красная площадь 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/map_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/map_address_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/map_button_search"
        tools:text="Новосибирск, Ленина 142" />

    <ImageButton
        android:id="@+id/map_button_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/map_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/map_search"
        android:background="@drawable/ic_baseline_search_24" />


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/map_button_search"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:context=".view.map.MapsFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>
